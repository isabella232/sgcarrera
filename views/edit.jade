form#form-container(method="post")

  input#numJobs(type='hidden',name='numJobs',value='0')
  input#numSchools(type='hidden',name='numSchools',value='0')
  input#numPublications(type='hidden',name='numPublications',value='0')
  input#numAffiliations(type='hidden',name='numAffiliations',value='0')

  h2(style='margin-bottom: 20px;') Datos personales
  .clear

  label(for='name') Nombre
  input#name(type='text',name='user[name]',class='validate[required]')

  .clear

  label(for='lastName') Apellidos
  input#lastName(type='text',name='user[lastNames]',class='validate[required]')

  .clear

  label(for='title') Headline
  input#title(type='text',name='user[title]',class='validate[required]')

  .clear

  label(for='place') Lugar
  input#place(type='text',name='user[place]')

  .clear

  label(for='summary') Summary
  textarea#summary(name='user[summary]') 

  .clear(style='padding-top: 20px')

  label(for='url') Url
  input#url(type='text',name='user[url]',class='validate[required,custom[url]')

  .clear
  
  h2 Skills
  .clear

  ul#skills
    - each skill in person.skills
      - if (skill.auto)
        li= skill.name

  h2 Experiencia laboral
  .clear

  div(style="float: right")
    a#addJob.button Agregar trabajo

  .clear

