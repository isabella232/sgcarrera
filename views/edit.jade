    input#ptitlenumPublication(type='text',name='publicationnumPublication[title]',value='titleValue',class='validate[required]')

    .clear

    label(for='purlnumPublication') Link
    input#purlnumPublication(type='text',name='publicationnumPublication[url]',value='urlValue',class='validate[required,custom[url]]')

    .clear

  div.affiliation
