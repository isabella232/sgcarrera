  div(style="float: right")
    a#addSchool.button Agregar escuela

  .clear

  h2 Publicaciones
  .clear

  #publicationPlaceholder

  div(style="float: right")
    a#addPublication.button Agregar publicación

  .clear

  h2 Afiliaciones
  .clear

  #affiliationPlaceholder

  div(style="float: right")
    a#addAffiliation.button Agregar afiliacion

  .clear

  #submit-btn
    input.submit(type="submit",value="Guardar!")

  .clear

div#hidden(style="display: none")
  div#linkedDialog
