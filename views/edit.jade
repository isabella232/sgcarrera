    textarea#ssummarynumSchool(name='schoolnumSchool[summary]') summaryValue

    .clear(style='padding-top: 20px')

    label(for='schoolStartnumSchool') Fecha de inicio
    input#schoolStartnumSchool(type='text',name='schoolnumSchool[start]',value='startValue',class='validate[required,custom[date]]')

    .clear

    label(for='schoolEndnumSchool') Fecha de término
